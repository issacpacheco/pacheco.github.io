---
const skills = [
    "HTML5",
    "CSS3",
    "JavaScript",
    "PHP",
    "MySQL",
    "Python",
    "Flask",
    "Laravel",
    "Angular",
    "Google Drive API",
    "AI/RAG",
    "Git",
];
---

<section id="skills" class="skills-section">
    <div class="container">
        <h2 class="section-title">Habilidades TÃ©cnicas</h2>
        <div class="skills-grid">
            {
                skills.map((skill) => (
                    <div class="skill-item">
                        <span>{skill}</span>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .skills-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .skill-item {
        background-color: var(--color-surface);
        border: 1px solid var(--color-primary);
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
        cursor: default;
    }

    .skill-item:hover {
        background-color: var(--color-primary);
        color: white;
        transform: scale(1.1);
        box-shadow: 0 0 15px rgba(139, 92, 246, 0.5);
    }
</style>
