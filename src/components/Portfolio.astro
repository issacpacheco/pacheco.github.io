---
const projects = [
    {
        title: "Automatización Tren Maya",
        description:
            "Sistema de automatización y análisis de datos utilizando Python, Flask y modelos de IA (RAG) para el INAH.",
        tags: ["Python", "Flask", "AI/RAG"],
        image: "https://placehold.co/600x400/1e293b/8b5cf6?text=Tren+Maya",
    },
    {
        title: "Plataforma Educativa CERT",
        description:
            "Optimización y liderazgo técnico de plataformas educativas para gestión académica.",
        tags: ["PHP", "MySQL", "Web"],
        image: "https://placehold.co/600x400/1e293b/ec4899?text=Plataforma+CERT",
    },
    {
        title: "Portales Turísticos LexGo",
        description:
            "Desarrollo de sitios web turísticos interactivos y modernos.",
        tags: ["Laravel", "Angular", "Frontend"],
        image: "https://placehold.co/600x400/1e293b/06b6d4?text=LexGo",
    },
    {
        title: "Sistema de Gestión INVERCO",
        description:
            "Plataforma personalizada para seguimiento de clientes y gestión interna.",
        tags: ["Full Stack", "Database", "Dashboard"],
        image: "https://placehold.co/600x400/1e293b/10b981?text=CRM+INVERCO",
    },
];
---

<section id="projects" class="portfolio-section">
    <div class="container">
        <h2 class="section-title">Proyectos Destacados</h2>
        <div class="projects-grid">
            {
                projects.map((project) => (
                    <article class="project-card">
                        <div class="card-image">
                            <img src={project.image} alt={project.title} />
                        </div>
                        <div class="card-content">
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                            <div class="tags">
                                {project.tags.map((tag) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                            <a href="#" class="btn-link">
                                Ver detalles &rarr;
                            </a>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>

<style>
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .project-card {
        background-color: var(--color-surface);
        border-radius: 12px;
        overflow: hidden;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .project-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
    }

    .card-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .project-card:hover .card-image img {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
    }

    .card-content h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .card-content p {
        color: #94a3b8;
        margin-bottom: 1.5rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .tag {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 0.25rem 0.75rem;
        border-radius: 99px;
        font-size: 0.875rem;
        color: var(--color-primary);
    }

    .btn-link {
        color: var(--color-accent);
        font-weight: 600;
        font-size: 0.9rem;
    }

    .btn-link:hover {
        text-decoration: underline;
    }
</style>
