---
import {
    FaHtml5,
    FaCss3,
    FaJs,
    FaPhp,
    FaPython,
    FaReact,
    FaGit,
    FaBootstrap,
} from "react-icons/fa";
import { SiGmail, SiMysql, SiJquery, SiAstro } from "react-icons/si";

const skills = [
    { name: "HTML5", percentage: 95 },
    { name: "CSS3", percentage: 90 },
    { name: "JavaScript", percentage: 90 },
    { name: "MySQL", percentage: 95 },
    { name: "PHP", percentage: 95 },
    { name: "Python", percentage: 85 },
    { name: "React", percentage: 70 },
    { name: "Git", percentage: 85 },
    { name: "Bootstrap", percentage: 85 },
    { name: "IA Generativa", percentage: 85 },
];

const techs = [
    {
        name: "HTML5",
        icon: FaHtml5,
    },
    {
        name: "CSS3",
        icon: FaCss3,
    },
    {
        name: "JavaScript",
        icon: FaJs,
    },
    {
        name: "MySQL",
        icon: SiMysql,
    },
    {
        name: "PHP",
        icon: FaPhp,
    },
    {
        name: "Python",
        icon: FaPython,
    },
    {
        name: "Bootstrap",
        icon: FaBootstrap,
    },
    {
        name: "Astro",
        icon: SiAstro,
    },
    {
        name: "React",
        icon: FaReact,
    },
    {
        name: "Git",
        icon: FaGit,
    },
];
---

<section id="skills" class="skills-section">
    <div class="container">
        <h2 class="section-title">
            Mis <span>Habilidades</span>
        </h2>

        <div class="skills-grid">
            {
                skills.map((skill) => (
                    <div class="skill-card animate-on-scroll">
                        <div class="skill-info">
                            <h3>{skill.name}</h3>
                            <span class="percentage">{skill.percentage}%</span>
                        </div>
                        <div class="progress-bg">
                            <div
                                class="progress-bar"
                                data-width={skill.percentage}
                            />
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
    <!-- Tech Slider (Infinite Marquee) -->
    <div class="tech-slider-container">
        <div class="slider-track">
            <!-- Render double for infinite loop -->
            {
                [...techs, ...techs].map((tech) => {
                    const Icon = tech.icon;
                    return (
                        <div class="tech-item">
                            <Icon />
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>

<style>
    /* ... existing styles ... */

    /* Tech Slider Styles */
    .tech-slider-container {
        margin-top: 5rem;
        overflow: hidden;
        position: relative;
        padding: 2rem 0;
        mask-image: linear-gradient(
            to right,
            transparent,
            black 10%,
            black 90%,
            transparent
        );
        -webkit-mask-image: linear-gradient(
            to right,
            transparent,
            black 10%,
            black 90%,
            transparent
        );
    }

    .slider-track {
        display: flex;
        gap: 4rem;
        width: max-content;
        animation: scroll 30s linear infinite;
    }

    .slider-track:hover {
        animation-play-state: paused;
    }

    .tech-item {
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        transition: all 0.3s ease;
        filter: grayscale(100%);
        opacity: 0.6;
    }

    .tech-item:hover {
        filter: grayscale(0%);
        opacity: 1;
        transform: scale(1.1);
    }

    .tech-item svg {
        width: 100%;
        height: 100%;
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    .skills-section {
        background-color: var(--color-bg);
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .skill-card {
        background-color: var(--color-surface);
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: transform 0.3s ease;
    }

    .skill-card:hover {
        transform: translateY(-5px);
        border-color: var(--color-primary);
    }

    .skill-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .skill-info h3 {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-text);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .percentage {
        color: var(--color-primary);
        font-weight: 700;
        font-family: var(--font-heading);
    }

    .progress-bg {
        width: 100%;
        height: 10px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 9999px;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background: linear-gradient(
            90deg,
            var(--color-primary),
            var(--color-secondary)
        );
        width: 0; /* Starts at 0 for animation */
        border-radius: 9999px;
        transition: width 1.5s cubic-bezier(0.4, 0, 0.2, 1);
    }
</style>

<script>
    const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                const progressBar = entry.target.querySelector(
                    ".progress-bar",
                ) as HTMLElement;
                if (progressBar) {
                    const width = progressBar.dataset.width;
                    progressBar.style.width = `${width}%`;
                }
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document.querySelectorAll(".skill-card").forEach((card) => {
        observer.observe(card);
    });
</script>
